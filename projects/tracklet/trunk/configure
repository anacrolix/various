# add BUILD_ARCH to symbols
cp symbols symbols.$$
echo BUILD_ARCH `dpkg-architecture -qDEB_BUILD_ARCH` >> symbols.$$

# process @VARS@ in any *.in files
for infile in $(ls *.in); do
	outfile=${infile%.in}
	cp -f "$infile" "$outfile"
	while read symbol value; do
		sed "s/@$symbol@/$value/" "$outfile" > "${outfile}.$$"
		mv "${outfile}.$$" "$outfile"
	done < symbols.$$
	chmod -w "$outfile"
done

#rm symbols.$$

